<% provide(:title, "Login | ")%>
<h1> Log In </h1>

<%= form_with model: @user, url: log_in_path do |form| %>

<div class="mb-2">
  <%= form.label :email %>
  <%= form.email_field :email, class: "form-control" %>
</div>

<div class="mb-2">
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control" %>
</div>

<%= form.submit "Login", class: "btn btn-secondary mt-4" %>
<% end %>

<small class= "center">
New User? <%= link_to "Sign Up Now!", signup_path %>
</small>