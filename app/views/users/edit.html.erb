<h1> Editing <%= @user.full_name %>'s Profile

<%= form_with model: @user, url: user_path(@user) do |form| %>

  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :birthday %>
    <%= form.date_field :birthday, class: "form-control" %>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio, class: "form-control" %>
  </div>

  <%= form.submit "Edit User" %>
<% end %>